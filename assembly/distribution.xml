<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <baseDirectory>${artifactId}</baseDirectory>
    <files>
        <file>
            <source>src/main/resources/logback/logback-spring.xml</source>
        </file>
        <file>
            <source>src/main/resources/config/application.yml</source>
            <outputDirectory>config</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/target/${project.artifactId}-${project.version}.${packaging}</source>
            <destName>${project.artifactId}-${tag}.${packaging}</destName>
            <outputDirectory>jars</outputDirectory>
        </file>
    </files>
</assembly>
